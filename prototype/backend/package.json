{
  "name": "armoured-souls-backend",
  "version": "0.1.0",
  "description": "Backend for Armoured Souls Phase 1 Prototype",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc --project tsconfig.seed.json",
    "start": "node dist/index.js",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "test": "jest",
    "test:unit": "jest --config jest.config.unit.js",
    "test:integration": "jest --config jest.config.integration.js",
    "test:matchmaking": "tsx scripts/testMatchmaking.ts",
    "test:robot-stats": "tsx scripts/testRobotStats.ts"
  },
  "keywords": [
    "game",
    "battle",
    "robot"
  ],
  "author": "Robert Teunissen",
  "license": "UNLICENSED",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.2.1",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.3",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.39.3",
    "fast-check": "^4.5.3",
    "globals": "^17.4.0",
    "jest": "^29.7.0",
    "prisma": "^5.22.0",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.56.1"
  },
  "prisma": {
    "seed": "node dist/prisma/seed.js"
  }
}
